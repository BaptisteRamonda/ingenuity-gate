.template 0
function typeToIGSType (type)
   if (type = "STRING")
       return "igs.STRING_T"
   elsif (type = "INTEGER")
       return "igs.INTEGER_T"
   elsif (type = "DOUBLE")
       return "igs.DOUBLE_T"
   elsif (type = "BOOL")
       return "igs.BOOL_T"
   elsif (type = "IMPULSION")
       return "igs.IMPULSION_T"
   elsif (type = "DATA")
       return "igs.DATA_T"
   endif
endfunction typeToIGSType

.endtemplate
